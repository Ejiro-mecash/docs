{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "meCash Docs",
  "api": {
    "baseUrl": "https://api.mecash.com",
    "path": "/api-reference/openapi.json"
  },
  "colors": {
    "primary": "#9747FF",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/mecashlogo.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "account-creation",
              "authentication",
              "environments",
              "ip-whitelisiting",
              "webhooks-event",
              "faq"
            ]
          },
          {
            "group": "FIAT API",
            "pages": [
              "FIAT-API/quote-api/about-quote"
              
            ]
          },
          {
            "group": "RAMP API",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Endpoints",
            "openapi": {
              "source": "/path/to/openapi.json",
              "directory": "api-reference"
            }
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://www.discord.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/images/mecashlight.png",
    "dark": "/logo/mecashdark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@me-cash.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mecash14",
      "linkedin": "https://linkedin.com/company/me-cash"
    }
  }
}